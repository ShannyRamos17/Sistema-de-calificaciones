<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.calificaciones.controllers.AnadirDocenteController"
           style="-fx-background-color: rgba(0,0,0,0.4);">

    <VBox spacing="20" alignment="CENTER"
          style="-fx-background-color: #D9D9D9; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"
          maxWidth="400">

        <Label text="Ingrese el Nombre del Nuevo Docente"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <TextField fx:id="txtNombre"
                   promptText="Nombre completo..."
                   style="-fx-font-size: 14px; -fx-padding: 8; -fx-background-radius: 5; -fx-border-color: white; -fx-border-radius: 5;"/>

        <HBox spacing="30" alignment="CENTER">
            <Button fx:id="btnCancelar" text="Cancelar"
                    style="-fx-background-color: #A0A0A0; -fx-text-fill: black; -fx-background-radius: 5; -fx-padding: 8 25; -fx-cursor: hand; -fx-font-size: 14px;"/>

            <Button fx:id="btnGuardar" text="Guardar"
                    style="-fx-background-color: #A0A0A0; -fx-text-fill: black; -fx-background-radius: 5; -fx-padding: 8 25; -fx-cursor: hand; -fx-font-size: 14px;"/>
        </HBox>

    </VBox>

</StackPane>