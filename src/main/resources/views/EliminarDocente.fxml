<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.calificaciones.controllers.EliminarDocenteController"
           style="-fx-background-color: rgba(0,0,0,0.4);">

    <VBox spacing="20" alignment="CENTER"
          style="-fx-background-color: #E6E6E6; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"
          maxWidth="400">

        <Label text="¿Está seguro de eliminar al docente?"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <!-- Campo deshabilitado solo para mostrar el nombre -->
        <TextField fx:id="txtNombre"
                   editable="false"
                   style="-fx-font-size: 14px; -fx-padding: 8; -fx-background-radius: 5; -fx-opacity: 0.8; -fx-font-weight: bold;"/>

        <Label text="Esta acción no se puede deshacer y el docente perderá el acceso."
               wrapText="true"
               textAlignment="CENTER"
               style="-fx-font-size: 12px; -fx-text-fill: #666;"/>

        <HBox spacing="30" alignment="CENTER">
            <Button fx:id="btnCancelar" text="Cancelar"
                    style="-fx-background-color: #D9D9D9; -fx-text-fill: black; -fx-background-radius: 5; -fx-padding: 8 25; -fx-cursor: hand; -fx-font-size: 14px;"/>

            <Button fx:id="btnEliminar" text="Eliminar"
                    style="-fx-background-color: #FF6B6B; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 25; -fx-cursor: hand; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        </HBox>

    </VBox>

</StackPane>