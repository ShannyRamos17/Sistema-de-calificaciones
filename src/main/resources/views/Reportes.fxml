<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.calificaciones.controllers.ReportesController"
            style="-fx-background-color: #FFFFFF; -fx-padding: 20;">

    <!-- 1. CABECERA -->
    <top>
        <VBox spacing="20">
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
                <!-- Icono usuario simulado -->
                <StackPane>
                    <Rectangle width="40" height="40" arcWidth="10" arcHeight="10" fill="#D9D9D9"/>
                    <Label text="ðŸ‘¤" style="-fx-font-size: 20px;"/>
                </StackPane>

                <!-- â­ AQUÃ ESTABA EL PROBLEMA: FALTABAN LOS fx:id -->
                <Label fx:id="lblNombreMaestro" text="Cargando..."
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <Label fx:id="lblGrado" text="..."
                       style="-fx-font-size: 14px;"/>

                <Pane HBox.hgrow="ALWAYS"/>

                <Button text="â‰¡" style="-fx-font-size: 20px; -fx-background-color: transparent; -fx-cursor: hand;"/>
            </HBox>

            <!-- Separador -->
            <Separator />

            <!-- NOMBRE DEL ALUMNO SELECCIONADO -->
            <HBox alignment="CENTER" style="-fx-padding: 10;">
                <Label fx:id="lblNombreAlumno" text="Nombre del Alumno"
                       style="-fx-font-size: 18px; -fx-font-weight: normal;"/>
            </HBox>
        </VBox>
    </top>

    <!-- 2. TABLA CENTRAL -->
    <center>
        <TableView fx:id="tablaCalificaciones" VBox.vgrow="ALWAYS" style="-fx-border-color: #D3D3D3;">
            <columns>
                <TableColumn fx:id="colMateria" text="Materia" prefWidth="300"/>
                <TableColumn fx:id="colP1" text="Periodo 1" prefWidth="100" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colP2" text="Periodo 2" prefWidth="100" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colP3" text="Periodo 3" prefWidth="100" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colTotal" text="Total" prefWidth="100" style="-fx-alignment: CENTER; -fx-font-weight: bold;"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <!-- 3. BOTONES INFERIORES -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20 0 0 0;">
            <Button fx:id="btnCancelar" text="Cancelar"
                    style="-fx-background-color: #D9D9D9; -fx-padding: 8 20; -fx-font-size: 14px; -fx-cursor: hand;"/>
            <Button fx:id="btnGuardar" text="Guardar"
                    style="-fx-background-color: #D9D9D9; -fx-padding: 8 20; -fx-font-size: 14px; -fx-cursor: hand;"/>
        </HBox>
    </bottom>

</BorderPane>