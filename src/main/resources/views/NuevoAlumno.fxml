<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.calificaciones.controllers.NuevoAlumnoController"
           style="-fx-background-color: rgba(0,0,0,0.35);">

    <VBox spacing="20" alignment="CENTER"
          style="-fx-background-color: #e6e6e6; -fx-padding: 25; -fx-background-radius: 10;"
          maxWidth="350">

        <Label text="Ingrese el Nombre del Nuevo Alumno"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

        <TextField fx:id="txtNombre" prefWidth="250"/>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Cancelar" fx:id="btnCancelar"
                    style="-fx-background-radius: 6; -fx-padding: 6 20;"/>
            <Button text="Guardar" fx:id="btnGuardar"
                    style="-fx-background-radius: 6; -fx-padding: 6 20; -fx-font-weight: bold;"/>
        </HBox>

    </VBox>

</StackPane>
